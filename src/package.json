{
  "name": "omop-nlp-translator",
  "version": "0.1.0",
  "description": "A translation engine that converts natural language queries into OMOP-compatible SQL",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "start:openai": "LLM_PROVIDER=openai node src/server/index.js",
    "start:azure": "LLM_PROVIDER=azure-openai node src/server/index.js",
    "start:claude": "LLM_PROVIDER=anthropic node src/server/index.js",
    "start:openai-win": "set LLM_PROVIDER=openai && node src/server/index.js",
    "start:azure-win": "set LLM_PROVIDER=azure-openai && node src/server/index.js",
    "start:claude-win": "set LLM_PROVIDER=anthropic && node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "dev:openai": "LLM_PROVIDER=openai nodemon src/server/index.js",
    "dev:azure": "LLM_PROVIDER=azure-openai nodemon src/server/index.js",
    "dev:claude": "LLM_PROVIDER=anthropic nodemon src/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/"
  },
  "bin": {
    "omop-config": "./scripts/cli.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@azure/openai": "^1.0.0-beta.10",
    "axios": "^1.9.0",
    "body-parser": "^1.20.3",
    "commander": "^11.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
